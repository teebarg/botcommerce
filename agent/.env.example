# ─── Environment ───────────────────────────────────────────
# Set to "production" on Render, "development" locally
ENV=development

# ─── LLM ───────────────────────────────────────────────────
# For local development with Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# For production (Groq free tier) → get key at console.groq.com
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192

# ─── Qdrant (free cloud) ────────────────────────────────────
# Get from cloud.qdrant.io (free tier = 1GB, no credit card)
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# ─── Redis (Render free tier) ───────────────────────────────
REDIS_URL=redis://localhost:6379


API_BASE_URL=https://api.localhost:7000
API_KEY=your_api_key_here

AGENT_MAX_ITERATIONS=6
AGENT_VERBOSE=true
