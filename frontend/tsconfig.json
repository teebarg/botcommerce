{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@app/*": ["app/*"],
            "@lib/*": ["lib/*"],
            "@modules/*": ["modules/*"],
            "@pages/*": ["pages/*"],
            "@components/*": ["components/*"],
            "@config/*": ["config/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.js", ".next/dev/types/**/*.ts"],
    "exclude": ["node_modules", ".next", ".nyc_output", "coverage", "jest-coverage"]
}
